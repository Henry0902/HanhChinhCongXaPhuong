                                                        <td class="text-center">{{totals.TNTruocKy}}</td>
                                                        <td class="text-center">{{totals.TNTrongKy}}</td>

                                                        <!-- Đơn đã xử lý + chưa xử lý -->
                                                        <td class="text-center">{{totals.DonDaXuLy}}</td>
                                                        <td class="text-center">{{totals.DonChuaXuLy}}</td>

                                                        <!-- Đủ điều kiện xử lý -->
                                                        <td class="text-center">{{totals.DonKhieuNai + totals.DonToCao + totals.DonPhanAnh}}</td>
                                                        <td class="text-center">{{totals.VuDuDieuKien}}</td>

                                                        <!-- Phân loại theo nội dung -->
                                                        <td class="text-center">{{totals.DonKhieuNai}}</td>
                                                        <td class="text-center">{{totals.DonToCao}}</td>
                                                        <td class="text-center">{{totals.DonPhanAnh}}</td>

                                                        <!-- Phân loại theo tình trạng -->
                                                        <td class="text-center">{{totals.GiaiQuyetLanDau}}</td>
                                                        <td class="text-center">{{totals.GiaiQuyetNhieuLan}}</td>
                                                        <td class="text-center">{{totals.ChuaGiaiQuyet}}</td>

                                                        <!-- Kết quả xử lý - Đơn thuộc thẩm quyền -->
                                                        <td class="text-center">{{totals.DonThuocThamQuyenKhieuNai + totals.DonThuocThamQuyenToCao + totals.DonThuocThamQuyenPhanAnh}}</td>
                                                        <td class="text-center">{{totals.DonThuocThamQuyenKhieuNai}}</td>
                                                        <td class="text-center">{{totals.DonThuocThamQuyenToCao}}</td>
                                                        <td class="text-center">{{totals.DonThuocThamQuyenPhanAnh}}</td>

                                                        <!-- Đơn không thuộc thẩm quyền -->
                                                        <td class="text-center">{{totals.DonHuongDan + totals.DonChuyenDon + totals.DonDonDoc}}</td>
                                                        <td class="text-center">{{totals.DonHuongDan}}</td>
