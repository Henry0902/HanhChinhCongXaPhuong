                                                        @*Phân loại đơn theo tình trạng giải quyết*@
                                                        <td class="text-center">{{item.GiaiQuyetLanDau}}</td>
                                                        <td class="text-center">{{item.GiaiQuyetNhieuLan}}</td>
                                                        @*<td class="text-center"></td>*@
                                                        <td class="text-center">{{item.ChuaGiaiQuyet}}</td>

                                                        @*Kết quả xử lý đơn
                                                            Đơn thuộc thẩm quyền*@
