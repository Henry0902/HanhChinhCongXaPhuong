                            </div>
                            <div class="form-group">
                                <div style="display: flex; align-items: center; gap: 4px; cursor: pointer" ng-click="triggerFileInput()">
                                    <img src="~/Content/assets/images/upload_file.png" title="Upload file"> <span>Tối đa 5 file (PDF, JPG, JPEG, DOC, DOCX, XCL) - Tối đa 20MB/file</span>
                                </div>
                                <input type="file" id="file" accept=".doc,.docx,.pdf,.xls,.xlsx,.jpg" name="file" multiple onchange="angular.element(this).scope().validateFiles(this)" style="display: none;" />
                                <ul style="list-style-type: none; margin: 0 !important">
                                    <li ng-repeat="file in fileList track by $index" style="padding: 3px 0; ">
                                        <span>📄</span> {{ file.name }} <span style="cursor: pointer; color: red;" ng-click="removeFile($index)"> ❌</span>
                                    </li>
                                </ul>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer" style="padding-top: 12px; padding-bottom: 12px;">
                    <div class="button-group">
                        <button ng-click="closeModalAdd()" type="button" class="btn-custom btn-cancel">Hủy</button>
                        <div>
                            <button type="button" class="btn-custom btn-save" ng-click="saveForm(0)">Lưu</button>
                            <button type="button" class="btn-custom btn-submit" ng-click="saveForm(1)">Đăng ký →</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @*Modal gửi đăng ký*@
    <div class="modal fade" id="sendRegisterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" style="width: 500px">
            <div class="modal-content" style="border-radius: 6px; border: none; overflow: hidden">
                <div class="modal-header ">
                    <button type="button" class="close btn-close-modal" id="closech" data-dismiss="modal" tabindex="8">&times;</button>
                    <h4 class="modal-title">
                        Gửi đăng ký tiếp dân
                    </h4>
                </div>
                <div class="modal-body" style="padding: 24px 12px !important">
                    Anh/chị có chắc chắn đăng ký tiếp dân tại đơn vị <span style="font-weight: 600">{{formData.TenDonVi}}</span> vào ngày <span style="font-weight: 600">{{formData.NgayDangKy}}</span> không?
                </div>
                <div class="modal-footer" style="padding-top: 12px; padding-bottom: 12px;">
                    <a class="btn btn-xs btn-info b-radius-3" style="min-width: 80px" data-dismiss="modal"><i class="fa fa-times-circle"></i> Không</a>
                    <a class="btn btn-danger btn-xs btn-ok b-radius-3" style="min-width: 80px" ng-click="sendRegister()"><i class="fa fa-check-square-o"></i> Có</a>
                </div>
            </div>
        </div>
    </div>

