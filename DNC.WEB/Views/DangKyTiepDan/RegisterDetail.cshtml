                                <label>Thời gian đăng ký<span class="red"> *</span></label>
                                <div class="input-group form-group-option date date-picker">
                                    <input class="form-control date-picker" style="margin-top: 0 !important; border-radius: 3px !important; border: 1px solid #D5D5D5;" type="text" placeholder="Nhập..." required value="formData.NgayDangKy" id="NgayDangKy" name="NgayDangKy" ng-model="formAdd.NgayDangKy">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                                <span class="red" style="font-style: italic" ng-show="registrationForm.NgayDangKy.$touched && registrationForm.NgayDangKy.$invalid">Trường dữ liệu này không được để trống</span>
