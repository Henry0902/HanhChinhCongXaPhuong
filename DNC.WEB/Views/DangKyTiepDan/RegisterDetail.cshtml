@{
    ViewBag.Title = "Chi tiết đăng ký tiếp dân";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    .form-group {
        margin-bottom: 5px;
    }

    .modal .form-control {
        border: 1px solid white;
    }

    .profile-info-value {
        padding: 14px !important;
    }

    .note-container {
        border: 1px solid #e5731b;
        background-color: #fefaf5;
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .note-header {
        display: flex;
        align-items: center;
    }

    .note-icon {
        color: #e5731b;
        font-weight: bold;
        margin-right: 5px;
    }

    .note-text {
        font-weight: bold;
        color: #e5731b;
    }

    .note-description {
        color: #e5731b;
        font-weight: normal;
    }

    .update-btn {
        background-color: #e5731b;
        color: white;
        padding: 6px 12px;
        border: none;
        cursor: pointer;
        margin-top: 10px;
        font-size: 14px;
        border-radius: 4px;
    }

    .update-btn:hover {
        background-color: #d56215;
    }

    .status-common {
        padding: 4px;
        min-width: 120px;
        border-radius: 4px;
        display: inline-block;
        text-align: center;
    }

    .status-dang-soan-thao {
        background-color: #DBEAFE;
        color: #3B82F6;
    }

    .status-cho-xu-ly {
        background-color: #FFD6E7;
        color: #EB2F96;
    }

    .status-dang-xu-ly {
        background-color: #FFEDD5;
        color: #EA580C;
    }

    .status-da-phan-hoi {
        background-color: #B5F5EC;
        color: #08979C;
    }

    .status-khong-tiep-nhan {
        background-color: #F0F0F0;
        color: #434343;
    }

    .status-cong-dan-huy {
        background-color: #FECACA;
        color: #DC2626;
    }

    .status-da-tiep-dan {
        background-color: #DCFCE7;
        color: #22C55E;
    }

    .f-w-600 {
        font-weight: 600;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 8px;
    }

    .btn-custom:hover {
        opacity: 0.8;
    }

    .btn-custom {
        padding: 7px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
    }

    .btn-save {
        background-color: #007bff;
        color: white;
    }

    .btn-submit {
        background-color: #28a745;
        color: white;
    }

    .btn-common {
        border-radius: 4px;
        min-width: 100px;
        height: 32px;
        align-items: center;
        display: flex;
        justify-content: center;
        gap: 5px;
        padding: 6px 12px;
    }

    .btn-common:hover {
        opacity: 0.8;
    }

    .btn-delete {
        border: 1px solid #DC2626;
        color: #DC2626;
        background-color: #FFFFFF;
    }

    .btn-edit {
        border: 1px solid #176697;
        color: #FFFFFF;
        background-color: #176697;
    }

    .btn-resend {
        border: 1px solid #3B82F6;
        color: #3B82F6;
        background-color: #FFFFFF;
    }

    .btn-close {
        background-color: #FF4D4F;
        color: #FFFFFF;
        border: 1px solid #FF4D4F;
    }

    .btn-resolve {
        background-color: #F97316;
        color: #FFFFFF;
        border: 1px solid #F97316;
    }

    .btn-back {
        background-color: #CA8A04;
        color: #FFFFFF;
        border: 1px solid #CA8A04;
    }

    .b-radius-3 {
        border-radius: 3px !important;
    }

    .wrapper {
        margin: auto;
        background: white;
        padding: 0 20px;
        border-radius: 8px;
    }

    .t-left {
        text-align: left !important;
    }
</style>

<script src="~/ScriptController/RegisterDetailJs.js"></script>
<div class="main-content-inner" ng-controller="RegisterDetailJs">
    <div class="panel-default">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="/dang-ky-tiep-dan/danh-sach">Trang chủ</a>
                </li>
                <li>
                    <a href="#">Đăng ký tiếp dân</a>
                </li>
                <li class="active">Chi tiết đăng ký</li>
            </ul>
            <div class="nav-search" id="nav-search">
                <form class="form-search">
                    <div class="button-group">
                        <button type="button" class="btn-common btn-edit" ng-click="showModalEdit()" ng-show="formData.TrangThai == 0">
                            <img src="~/Content/assets/images/btn_edit.png"> Chỉnh sửa
                        </button>
                        <button ng-click="openDeleteModal(formData)" type="button" class="btn-common btn-delete" ng-show="formData.TrangThai == 0">
                            <img src="~/Content/assets/images/icon_delete.png"> Xoá
                        </button>
                        <button type="button" class="btn-common btn-close" ng-click="showModalClose()" ng-show="[1,2,3].includes(formData.TrangThai)">
                            <img src="~/Content/assets/images/btn_huy.png"> Huỷ đăng ký
                        </button>
                        <button type="button" class="btn-common btn-resend" ng-click="showModalResend()" ng-show="formData.TrangThai == 4 || formData.TrangThai == 5">
                            <img src="~/Content/assets/images/icon_resend.png"> Đăng ký lại
                        </button>
                        <button type="button" class="btn-common btn-resolve" ng-click="showModalSendRegister()" ng-show="formData.TrangThai == 0">
                            <img src="~/Content/assets/images/btn_gui_xu_ly.png">Đăng ký
                        </button>
                        <button type="button" class="btn-common btn-back" ng-click="onBack()">
                            <img src="~/Content/assets/images/btn_back.png">Quay lại
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="page-header panel-body">
            <div class="p-table ptdv-pding">
                <div class="panel-body" style="margin-top: 14px;">
                    <div class="row" style="margin: 0 !important">
                        <div class="col-xs-12">
                            <div id="user-profile-1" class="user-profile row">
                                <div class="col-xs-12 col-sm-9">
                                    <h4>Thông tin đăng ký tiếp dân</h4>
                                    <div class="profile-user-info profile-user-info-striped">
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Trạng thái </div>
                                            <div style="padding: 14px">
                                                <span ng-show="formData.TrangThai == 0" class="status-common status-dang-soan-thao">Đang soạn thảo</span>
                                                <span ng-show="formData.TrangThai == 1" class="status-common status-cho-xu-ly">Chờ xử lý</span>
                                                <span ng-show="formData.TrangThai == 2" class="status-common status-dang-xu-ly">Đang xử lý</span>
                                                <span ng-show="formData.TrangThai == 3" class="status-common status-da-phan-hoi">Đã phản hồi</span>
                                                <span ng-show="formData.TrangThai == 4" class="status-common status-khong-tiep-nhan">Không tiếp nhận</span>
                                                <span ng-show="formData.TrangThai == 5" class="status-common status-cong-dan-huy">Công dân huỷ</span>
                                                <span ng-show="formData.TrangThai == 6" class="status-common status-da-tiep-dan">Đã tiếp dân</span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Đơn vị tiếp nhận </div>
                                            <div class="profile-info-value f-w-600" id="TenDonVi"> {{formData.TenDonVi}} </div>
                                        </div>
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Thời gian tạo </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="NgayTao">{{formData.NgayTao}}</span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Thời gian đăng ký </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="NgayDangKy">{{formData.ThoiGianHen ? formData.ThoiGianHen : formData.NgayDangKy}} <span style="color: #DC6803" ng-show="formData.TrangThai == 3 && isExpired(formData.ThoiGianHenText)">(Quá hạn)</span></span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Nội dung </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="ChuDe">{{formData.ChuDe}}</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="space-10"></div>
                                    <div class="form-group">
                                        <div style="display: flex; align-items: center; gap: 4px;">
                                            <img src="~/Content/assets/images/upload_file.png"> <span>File đính kèm</span>
                                        </div>
                                        <ul style="list-style-type: none; margin: 0 !important">
                                            <li ng-repeat="file in formData.ListFile track by $index" style="padding: 3px 0; cursor: pointer;" title="{{file.TenTep}}" ng-click="viewFile(file)">
                                                <span>📄</span> {{ file.TenTep }} <span style="cursor: pointer; color: red;"></span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div id="user-profile-1" class="user-profile row" style="margin-top: 14px;" ng-show="[2,3,4].includes(formData.TrangThai)">
                                <div class="col-xs-12 col-sm-9">
                                    <h4>Thông tin xử lý</h4>
                                    <div class="profile-user-info profile-user-info-striped">
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Người xử lý </div>
                                            <div class="profile-info-value f-w-600" id="NguoiXuLy"> {{formData.NguoiXuLy ? formData.NguoiXuLy : "-"}} </div>
                                        </div>
                                        <div class="profile-info-row">
                                            <div class="profile-info-name t-left"> Ngày tiếp nhận </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="NgayTiepNhan">{{formData.NgayTiepNhan ? formData.NgayTiepNhan : "-"}}</span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row" ng-show="[3,4].includes(formData.TrangThai)">
                                            <div class="profile-info-name t-left"> Ngày xử lý </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="NgayXuLy">{{formData.NgayXuLy ? formData.NgayXuLy : "-"}}</span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row" ng-show="[3].includes(formData.TrangThai)">
                                            <div class="profile-info-name t-left"> Lịch hẹn được duyệt </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="LichHen">{{formData.ThoiGianHenText ? formData.ThoiGianHenText : "-"}}</span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row" ng-show="[4].includes(formData.TrangThai)">
                                            <div class="profile-info-name t-left"> Kết quả </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="KetQua">{{formData.KetQuaXuLy ? formData.KetQuaXuLy : "-"}}</span>
                                            </div>
                                        </div>
                                        <div class="profile-info-row" ng-show="[3].includes(formData.TrangThai)">
                                            <div class="profile-info-name t-left"> Nơi tiếp dân </div>
                                            <div class="profile-info-value f-w-600">
                                                <span class="editable" id="DiaDiemTiepNhan">{{formData.NoiTiepText ? formData.NoiTiepText : "-"}}</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="space-10"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: transparent; z-index: 30001; opacity: .8; filter: alpha(opacity=70); display: none">
        <p style="position: absolute; top: 5%; left: 50%; color: #ff6a00; text-align: center">
            <i class="fa fa-spinner fa-pulse fa-3x fa-spin fa-fw margin-bottom"></i><br />
            Vui lòng đợi...
        </p>
    </div>

    @* Modal cập nhật *@
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" style="width: 800px">
            <div class="modal-content" style="border-radius: 6px; border: none; overflow: hidden">
                <div class="modal-header ">
                    <button type="button" class="close btn-close-modal" id="closech" data-dismiss="modal" tabindex="8">&times;</button>
                    <h4 class="modal-title">
                        <i class="ace-icon fa fa-pencil-square-o bigger-100"></i> Chỉnh sửa đăng ký tiếp dân
                    </h4>
                </div>
                <div class="modal-body" style="padding: 24px 12px !important">
                    <div class="wrapper">
                        <form name="registrationForm" novalidate>
                            <div class="form-group" style="display: flex; flex-direction: column">
                                <label>Đơn vị tiếp nhận<span class="red"> *</span></label>
                                <select name="IdDonViTiepDan" style="margin-bottom: 5px;" ng-model="formAdd.IdDonViTiepDan" required>
                                    <option value="" disabled selected>--- Chọn ---</option>
                                    <option ng-repeat="department in lstDepartments" value="{{department.Id}}">{{department.Name}}</option>
                                </select>
                                <span class="red" style="font-style: italic" ng-show="registrationForm.IdDonViTiepDan.$touched && registrationForm.IdDonViTiepDan.$invalid">Trường dữ liệu này không được để trống</span>
                            </div>
                            <div class="form-group" style="display: flex; flex-direction: column">
                                <label>Thời gian đăng ký<span class="red"> *</span></label>
                                <div class="input-group form-group-option date date-picker">
                                    <input class="form-control date-picker" style="margin-top: 0 !important; border-radius: 3px !important; border: 1px solid #D5D5D5;" type="text" placeholder="Nhập..." required value="formAdd.NgayDangKy" id="NgayDangKy" name="NgayDangKy" ng-model="formAdd.NgayDangKy">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                                <span class="red" style="font-style: italic" ng-show="registrationForm.NgayDangKy.$touched && registrationForm.NgayDangKy.$invalid">Trường dữ liệu này không được để trống</span>
                            </div>
                            <div class="form-group" style="display: flex; flex-direction: column">
                                <label>Nội dung<span class="red"> *</span></label>
                                <textarea name="ChuDe" rows="4" maxlength="2000" style="border-radius: 4px !important" placeholder="Nhập..." ng-model="formAdd.ChuDe" required></textarea>
                                <span class="red" style="font-style: italic" ng-show="registrationForm.ChuDe.$touched && registrationForm.ChuDe.$invalid">Trường dữ liệu này không được để trống</span>
                            </div>
                            <div class="form-group">
                                <div style="display: flex; align-items: center; gap: 4px; cursor: pointer" ng-click="triggerFileInput()">
                                    <img src="~/Content/assets/images/upload_file.png" title="Upload file"> <span>Tối đa 5 file (PDF, JPG, JPEG, DOC, DOCX, XCL) - Tối đa 20MB/file</span>
                                </div>
                                <input type="file" id="file" accept=".doc,.docx,.pdf,.xls,.xlsx,.jpg" name="file" multiple onchange="angular.element(this).scope().validateFiles(this)" style="display: none;" />
                                <ul style="list-style-type: none; margin: 0 !important">
                                    <li ng-repeat="file in fileList track by $index" style="padding: 3px 0; ">
                                        <span>📄</span> {{ file.name }} <span style="cursor: pointer; color: red;" ng-click="removeFile($index)"> ❌</span>
                                    </li>
                                </ul>
                                <ul style="list-style-type: none; margin: 0 !important">
                                    <li ng-repeat="file in formData.ListFile track by $index" style="padding: 3px 0; ">
                                        <span>📄</span> {{ file.TenTep }} <span style="cursor: pointer; color: red;" ng-click="removeFileUpdate($index)"> ❌</span>
                                    </li>
                                </ul>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer" style="padding-top: 12px; padding-bottom: 12px;">
                    <div class="button-group">
                        <button ng-click="closeModalAdd()" type="button" class="btn-custom btn-cancel">Hủy</button>
                        <div>
                            <button type="button" class="btn-custom btn-save" ng-click="saveFormUpdate(0)">Lưu</button>
                            <button type="button" class="btn-custom btn-submit" ng-click="saveFormUpdate(1)">Đăng ký →</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @* Modal thêm mới *@
